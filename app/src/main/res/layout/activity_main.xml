<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/box"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:background="@drawable/circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginTop="30px"
            android:fontFamily="sans-serif-medium"
            android:text="Good morining, Marin!"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="50px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:08"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daruvar"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400px"
            android:layout_marginTop="60px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 째C"
                android:textColor="@color/black"
                android:textSize="40dp" />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="150px"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:text="HOUSE TEMPERATURE"
        android:textColor="@color/black"
        android:textSize="40px"/>

    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/field">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="20 째C"
            android:textSize="40dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_marginLeft="80dp"
                android:textColor="@color/black"
                android:text=" MINIMAL"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_marginLeft="95dp"
                android:textColor="@color/black"
                android:text=" 18째C"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="-20dp"
                android:textColor="@color/black"
                android:text="-----"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_marginTop="-18dp"
                android:layout_marginLeft="96dp"
                android:textColor="@color/black"
                android:text=" 20째C"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="80dp"
                android:textColor="@color/black"
                android:text="MAXIMAL"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="HOUSE HUMIDITY"
            android:textColor="@color/black"
            android:textSize="40px"/>

        <LinearLayout
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@drawable/field">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="75%"
                android:textSize="40dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_marginLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="95dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="GOOD"
                    android:textSize="30dp"/>

            </LinearLayout>



        </LinearLayout>

</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="20dp"
        android:text="LED CONTROL"
        android:textColor="@color/black"
        android:textSize="40px"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <me.angrybyte.circularslider.CircularSlider
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-55dp"
            android:padding="10dp"
            app:angle="4.75"
            app:border_color="#A4B9B9B9"
            app:start_angle="6"
            app:thumb_color="#F44336"
            app:thumb_size="10dp" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/img"
            android:scaleType="centerCrop" />


    </RelativeLayout>

    </LinearLayout>

</LinearLayout>
